                                            PointerEntered="ClearTextButton_PointerEntered"
                                            PointerExited="ClearTextButton_PointerExited"
                                            ToolTipService.ToolTip="Clear all Text"
                                            ToolTipService.Placement="Top"
                                            Foreground="DarkGray"
                                            Style="{ThemeResource BottomMicButtonStyle}">
                                        <Button.Content>
                                            <BitmapIcon Foreground="DimGray" 
                                                        x:Name="ClearTextButtonIcon"
                                                        Height="10" 
                                                        UriSource="/Assets/Icons/Close.png"/>
                                        </Button.Content>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                        
                        <Grid Grid.Row="1" 
                              Visibility="Collapsed"
                              BorderBrush="LightGray"
                              BorderThickness="0,1,0,0"
                              x:Name="SpeechGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SpeechTextBox" 
                                    Grid.Column="0"
                                    PlaceholderText="Say Something" 
                                    Padding="25,25,7.5,25" 
                                    FontSize="14.5"
                                    MinHeight="70"
                                    IsReadOnly="True"
                                    TextAlignment="Right"
                                    Foreground="#FF2B2B2B"    
                                    BorderThickness="0"
                                    TextChanged="MainTextBox_TextChanged"
                                    VerticalAlignment="Bottom"
                                    Background="White"
                                    FocusVisualPrimaryBrush="White"
                                    PlaceholderForeground="#FF7B7B7B" 
                                    IsSpellCheckEnabled="False"
                                    TextWrapping="Wrap" 
                                    AcceptsReturn="False"
                                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                    FocusVisualSecondaryBrush="White" 
                                    SelectionHighlightColor="#FF2B2B2B">
                                <TextBox.Resources>
                                    <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="White"/>
                                    <SolidColorBrush x:Key="TextControlBackgroundPointerEnter" Color="White"/>
                                    <x:Double x:Key="TextControlThemeMinHeight">30</x:Double>
                                    <x:Double x:Key="TextControlThemeMinWidth">30</x:Double>
                                </TextBox.Resources>
                            </TextBox>
                            <Image Grid.Column="1"
                                   x:Name="SpeechImage" 
                                   Source="/Assets/Icons/Listening.gif"
                                   Height="30"
                                   Margin="10,0,20,0"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1" 
                          x:Name="MicGrid"
                          Margin="0,25,50,0"
                          Background="Transparent"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top">
                        <Canvas x:Name="MicShadowHost"/>
                        <Rectangle x:Name="MicShadow"
                                   Fill="White"
                                   Height="70"
                                   Width="70"
                                   RadiusX="35"
                                   RadiusY="35"/>
                        <Button x:Name="MicAndSendButton"
                                Background="White"
                                Height="70"
                                Width="70"
                                CornerRadius="35"
                                ToolTipService.ToolTip="Speak to Allison"
                                ToolTipService.Placement="Top"
                                Click="MicAndSendButton_Click"
                                Foreground="DarkGray"
                                Style="{ThemeResource BottomMicButtonStyle}">
                            <Button.Content>
                                <BitmapIcon Foreground="DimGray" 
                                            x:Name="MicAndSendButtonIcon"
                                            Height="22" 
                                            UriSource="{x:Bind MicToSendIcon, Converter={StaticResource MicToSendIconConverters}, Mode=OneWay}"/>
                            </Button.Content>
                        </Button>
                    </Grid>
                </Grid>

                <Grid x:Name="TextBoxGridFunction"
                              Grid.Row="2" 
                              Background="#7FFFFFFF"
                              Visibility="Collapsed"/>
            </Grid>
        </Grid>
        <Grid x:Name="ClearAllPopupOverlay"
              Background="#7FFFFFFF"
              Visibility="Collapsed"/>
        <Popup x:Name="ClearAllPopup"
               Height="200"
               Width="350"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition/>
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid Background="Transparent">
                <Canvas x:Name="ClearAllShadowHost"/>
                <Rectangle x:Name="ClearAllShadow"
                           Fill="White"
                           Height="200"
                           Width="330"
                           RadiusX="10"
                           RadiusY="10"/>
                <Grid CornerRadius="10" Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,0,0,10">
                        <Image Height="18"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Source="/Assets/Icons/clear.png"/>
                        <TextBlock Grid.Row="0" 
                                    FontFamily="Yu Gothic UI" 
                                    FontWeight="Medium"
                                    FontSize="16"
                                    VerticalAlignment="Center"
                                    Margin="25,0,0,0"
                                    TextWrapping="Wrap"
                                    TextAlignment="Left">Clear my chat history.</TextBlock>
                    </Grid>
                    <TextBlock Grid.Row="1" 
                               FontFamily="Yu Gothic UI" 
                               TextWrapping="Wrap"
                               TextAlignment="Left"
                               FontSize="13">This action will delete all the chat messages.</TextBlock>
                    <Grid Grid.Row="2" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="130">
                                <Button x:Name="CancelButton"
                                        Content="Cancel"
                                        Width="130"
                                        Height="40"
                                        BorderThickness="0"
                                        CornerRadius="10"
                                        Padding="15,8,15,8"
                                        HorizontalAlignment="Center" 
                                        FontFamily="Bahnschrift Light"
                                        VerticalAlignment="Center" 
                                        Background="Transparent" 
                                        Foreground="DimGray"
                                        Click="CancelButton_Click"
                                        Style="{StaticResource CloseButtonStyle}"/>
                            </Grid>
                            <Grid Width="130" 
                                  Margin="20,0,0,0">
                                <Button x:Name="ClearButton"
                                        Content="Clear all"
                                        Padding="15,8,15,8"
                                        Width="130"
                                        Height="40"
                                        CornerRadius="10"
                                        HorizontalAlignment="Center" 
                                        FontFamily="Bahnschrift Light"
                                        VerticalAlignment="Center" 
                                        Background="#FFF0F0F0"
                                        Foreground="Black"
                                        Click="ClearButton_Click"
                                        Style="{StaticResource ClearButtonStyle}"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Popup>
        <MediaElement x:Name="media"/>
    </Grid>
</Page>